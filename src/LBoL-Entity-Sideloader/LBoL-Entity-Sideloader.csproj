  <ItemGroup>
    <Folder Include="spriteTemplates\" />
  </ItemGroup>
    
    
	

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy /Y &quot;$(TargetPath)&quot; &quot;$(ProjectDir)&quot;&#xD;&#xA;copy /Y &quot;$(OutDir)\$(AssemblyName).xml&quot; &quot;$(ProjectDir)&quot;&#xD;&#xA;IF exist &quot;$(BepInExFolder)\plugins\$(AssemblyName)&quot; goto skipDir&#xD;&#xA;mkdir &quot;$(BepInExFolder)\plugins\$(AssemblyName)&quot;&#xD;&#xA;:skipDir&#xD;&#xA;copy /Y &quot;$(TargetPath)&quot; &quot;$(BepInExFolder)\plugins\$(AssemblyName)&quot;&#xD;&#xA;copy /Y &quot;$(OutDir)\$(AssemblyName).xml&quot; &quot;$(BepInExFolder)\plugins\$(AssemblyName)&quot;&#xD;&#xA;copy /Y &quot;$(ProjectDir)libs\*&quot; &quot;$(BepInExFolder)\plugins\$(AssemblyName)&quot; &#xD;&#xA;IF not exist &quot;E:\unity\LBoL-Asset-Designer\Assets\ModdingAssembllies\SideLoader\&quot; goto noUnityDir&#xD;&#xA;copy /Y &quot;$(TargetPath)&quot; &quot;E:\unity\LBoL-Asset-Designer\Assets\ModdingAssembllies\SideLoader&quot;&#xD;&#xA;copy /Y &quot;$(OutDir)\$(AssemblyName).xml&quot; &quot;E:\unity\LBoL-Asset-Designer\Assets\ModdingAssembllies\SideLoader&quot;&#xD;&#xA;:noUnityDir&#xD;&#xA;powershell -command &quot;Compress-Archive -Path '$(TargetPath)', '$(ProjectDir)manifest.json', '$(ProjectDir)icon.png', '$(ProjectDir)README.md', '$(ProjectDir)steamREADME.md', '$(ProjectDir)modinfo.json', '$(ProjectDir)libs\*', '$(OutDir)\$(AssemblyName).xml' -DestinationPath  '$(ProjectDir)$(AssemblyName).zip' -Force&quot;&#xD;&#xA;copy /Y &quot;$(ProjectDir)$(AssemblyName).zip&quot; &quot;$(GameFolder)\Mods&quot;" />
  </Target>
	

	


</Project>
